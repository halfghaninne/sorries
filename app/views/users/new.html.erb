<%= render :partial => '/shared/mobile_nav_slideout' %>

<div class="container">
  
  <%= render :partial => '/shared/header' %>  
  
  <div class="container--sign_up_block small-push-1">
  
  	<div class="flash">
  		<%= flash[:message] %>
  	</div>
  
    <h2>Sign Up:</h2>
  
    <%= form_for @user do |f| %>
      <%= f.label :username %> 
        <%= f.text_field(:username) %><br>
      <%= f.label :password %> 
        <%= f.password_field(:password) %><br><br>
      <%= f.submit "Sign Up" %>
    <% end %>

  </div>

</div>